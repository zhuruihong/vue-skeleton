@font-face
  font-family: 'class-357-webfont'
  src: url('../fonts/class-357-webfont.eot'); /* IE9 Compat Modes */
  src: url('../fonts/class-357-webfont.eot#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../fonts/class-357-webfont.ttf') format('truetype'), /* Safari, Android, iOS */
    url('../fonts/class-357-webfont.woff') format('woff'), /* Modern Browsers */
    url('../fonts/class-357-webfont.svg#class-357-webfont') format('svg') /* Legacy iOS */
  font-weight: normal
  font-style: normal

html
  height 100%

body, h1, h2, h3, h4, h5, h6, p, input, a, div
  margin 0
  padding 0
  font-family 'Microsoft YaHei', 'Microsoft Sans Serif', 'class-357-webfont'

body
  background #F4F5F6
  min-height 100%
  position relative

ul
  list-style none
  margin 0
  padding 0

a
  text-decoration none
  color#333

#app
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-align center
  color #2c3e50
.hello
  //min-height 850px
.header-height
  height 900px

.child-view
  transition all .5s cubic-bezier(.55,0,.1,1)
  min-height 850px

.slide-left-enter, .slide-right-leave-active
  opacity 0
  -webkit-transform translate(30px, 0)
  transform translate(30px, 0)

.slide-left-leave-active, .slide-right-enter
  opacity 0
  -webkit-transform translate(-30px, 0)
  transform translate(-30px, 0)

